{
  "name": "company",
  "version": "1.0.0",
  "description": "A single page website template for your business marketing",
  "source": [
    "src/index.html",
    "src/less/main.less",
    "src/js/main.js",
    "src/docs/index.html"
  ],
  "scripts": {
    "js": "parcel build src/js/main.js --dist-dir js --no-optimize --no-content-hash --no-source-maps",
    "js-min": "parcel build src/js/main.js --dist-dir js --no-content-hash --no-source-maps",
    "css": "parcel build src/less/main.less --dist-dir css --no-optimize --no-content-hash --no-source-maps",
    "css-min": "parcel build src/less/main.less --dist-dir css --no-content-hash --no-source-maps",
    "docs": "parcel src/docs/index.html --open",
    "serve": "parcel src/index.html --open",
    "watch": "parcel watch src/index.html",
    "build": "parcel build src/index.html --no-source-maps",
    "public": "parcel build src/index.html --no-source-maps --public-url /company/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jacobxperez/company.git"
  },
  "keywords": [
    "css",
    "less",
    "front-end",
    "framework",
    "zero-class"
  ],
  "author": "Jacob Perez",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jacobxperez/company/issues"
  },
  "homepage": "https://github.com/jacobxperez/company/",
  "devDependencies": {
    "@mischnic/parcel-namer-preserve-structure": "^0.2.0",
    "@parcel/transformer-less": "^2.8.1",
    "less": "^4.1.3",
    "parcel": "^2.8.1",
    "parcel-namer-hashless": "^1.0.3",
    "parcel-optimizer-friendly-urls": "^0.2.0"
  }
}
